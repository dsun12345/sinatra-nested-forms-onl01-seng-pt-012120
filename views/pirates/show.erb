<h1>Pirate</h1>
<div class="pirate">
  <h2>Name: <%= @pirate.name%></h2>
  <h3>Weight: <%= @pirate.weight%></h3>
  <h4>Height: <%= @pirate.height%></h4>
</div>

<h1>Ship</h1>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <P>Booty: <%= ship.booty%></P><br>
  </div><br>
<% end %>